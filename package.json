{
  "name": "translate-po-mcp",
  "version": "1.0.0",
  "description": "MCP server for translating .po gettext files",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "translate-po-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
